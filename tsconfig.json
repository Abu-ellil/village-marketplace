{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": false,
    "types": ["react", "react-native", "jest"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
